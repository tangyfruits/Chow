<div class="center">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(article.image.url), article %>
          <div class="caption">
            <h3><%= article.title %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
