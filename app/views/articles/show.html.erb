<div class="row">
  <div class="col-md-6">
        <h3><b><%= @article.title %></b></h3>
    <div class="thumbnail">
      <%= image_tag @article.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <br>
	  <p><b><%= "Submitted by #{@article.user.email}" %></b></p>
    <p><%= simple_format(@article.text) %></p>
    <br>

  </div>
</div>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Leave a comment!</h2>
<%= render 'comments/form' %>
<%if (user_signed_in?) && (current_user == @article.user)%>
<%= link_to 'Edit', edit_article_path(article), class:"btn btn-link" %>
<%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-link" %>
<% end %>
