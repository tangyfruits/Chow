<div class="row">
  <div class="col-md-6">
        <h3><%= @article.title %></h3>
    <div class="thumbnail">
      <%= image_tag @article.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <br>
    <br>
    <p><%= simple_format(@article.text) %></p>
    <br>

  </div>
</div>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Leave a comment!</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
